{
	"name": "Jekyll Site",
	"image": "mcr.microsoft.com/devcontainers/ruby:3.2-bullseye",

	// Since I'm using Podman, 'root' inside maps to 'local user' outside.
	// This gives you perfect permissions without chown hacks (which make a big mess).
	"remoteUser": "root",

	"customizations": {
		"vscode": {
			"extensions": [
				"streetsidesoftware.code-spell-checker",
				"Shopify.ruby-lsp"
			]
		}
	},

	"forwardPorts": [4000, 35729],

	// Run the setup script (configures git, installs bundle)
	"postCreateCommand": "sh .devcontainer/post-create.sh"
}